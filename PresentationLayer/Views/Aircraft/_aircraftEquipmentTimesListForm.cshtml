@using DataModels.Models;
@model ViewModels.VM.AirCraftVM
@{
    Layout = null;
    var renderList = Model.AircraftEquipmentTimesList;
}


@for (int i = 0; i < Model.Count(); i++)
{
    <div class="col-12" id="divenginePropellers" style="display:none">
        <div class="form-group">
            @Html.HiddenFor(m => m[i].Id)
            @Html.HiddenFor(m => m[i].AircraftId)
            <label for="">Engine @(i+1)</label>
            @Html.EditorFor(m => m[i].Hours, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m[i].Hours)

            @Html.EditorFor(m => m[i].EquipmentName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m[i].EquipmentName)

            @Html.EditorFor(m => m[i].AircraftId, new { htmlAttributes = new { @class = "form-control" } })
        </div>
